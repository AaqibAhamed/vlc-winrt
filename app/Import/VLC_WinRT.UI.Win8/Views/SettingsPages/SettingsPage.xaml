<UserControl x:Class="VLC_WinRT.Views.VariousPages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:VLC_WinRT.Views.VariousPages"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:userControls="using:VLC_WinRT.Views.UserControls"
             mc:Ignorable="d">

    <Grid x:Name="RootGrid"
          Background="{ThemeResource ApplicationOverlayTranslucentThemeBrush}"
          DataContext="{Binding Source={StaticResource Locator}, Path=SettingsVM}">
        <ScrollViewer Style="{StaticResource VerticalScrollViewerStyle}">
            <StackPanel x:Name="RootPanel">
                <Grid Margin="{StaticResource TitleBarMarginTop}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <AppBarButton Grid.Column="0"
                                  Style="{StaticResource AppBarButtonStyleHorizontal}"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Stretch"
                                  DataContext="{Binding Source={StaticResource Locator}, Path=MainVM}"
                                  Command="{Binding GoBackCommand}"
                                  Width="50"
                                  Margin="{StaticResource FrameMarginLeft}">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="{StaticResource PreviousPageSymbol}"
                                      Margin="0,3,0,0"
                                      FontFamily="{StaticResource VLCFont}" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <TextBlock Grid.Column="1"
                               Text="{Binding Source={StaticResource Strings}, Path=Settings}"
                               Style="{StaticResource SubheaderTextBlockStyle}" />
                </Grid>
                <AppBarButton x:Name="UserInterface" 
                              Label="{Binding Source={StaticResource Strings}, Path=UserInterface}"
                              Style="{StaticResource AppBarButtonStyleHorizontalMenu}"
                              Command="{Binding ChangeSettingsViewCommand}"
                              CommandParameter="0"
                              FontWeight="Light"
                              FontSize="17"
                              Margin="{StaticResource FrameMarginVertical}"
                              HorizontalAlignment="Stretch">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="{StaticResource ExpandWindow}"
                                  FontFamily="{StaticResource VLCFont}" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton Label="{Binding Source={StaticResource Strings}, Path=VideoSettings}"
                              Style="{StaticResource AppBarButtonStyleHorizontalMenu}"
                              Command="{Binding ChangeSettingsViewCommand}"
                              CommandParameter="1"
                              FontWeight="Light"
                              FontSize="17"
                              Margin="{StaticResource FrameMarginVertical}"
                              HorizontalAlignment="Stretch">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="{StaticResource VideoSymbol}"
                                  FontFamily="{StaticResource VLCFont}" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton Label="{Binding Source={StaticResource Strings}, Path=MusicSettings}"
                              Style="{StaticResource AppBarButtonStyleHorizontalMenu}"
                              Command="{Binding ChangeSettingsViewCommand}"
                              CommandParameter="2"
                              FontWeight="Light"
                              FontSize="17"
                              Margin="{StaticResource FrameMarginVertical}"
                              HorizontalAlignment="Stretch">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="{StaticResource MusicSymbol}"
                                  FontFamily="{StaticResource VLCFont}" />
                    </AppBarButton.Icon>
                </AppBarButton>


                <TextBlock Text="{Binding Source={StaticResource Strings}, Path=AboutTheApp}"
                           Style="{StaticResource SubheaderTextBlockStyle}"
                           Margin="{StaticResource FrameMarginBothSides}"/>
                <TextBlock Style="{StaticResource BodyTextBlockStyle}"
                           Foreground="{ThemeResource PivotHeaderForegroundUnselectedBrush}"
                           VerticalAlignment="Center"
                           Margin="{StaticResource FrameMarginLeft}">
                    <Run Text="VLC"/>
                    <Run x:Name="AppVersion" />
                    <Run Text="for Windows Store" />
                </TextBlock>
                <Grid Margin="{StaticResource FrameMarginBothSides}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="{StaticResource FrameMarginGridLength}" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button Content="{Binding Source={StaticResource Strings}, Path=SpecialThanks}"
                            Command="{Binding Source={StaticResource Locator}, Path=MainVM.GoToThanksPageCommand}" />
                    <Button Grid.Column="2"
                            Margin="12,0,0,0"
                            Content="{Binding Source={StaticResource Strings}, Path=License}"
                            Command="{Binding Source={StaticResource Locator}, Path=MainVM.GoToLicensePageCommand}" />
                </Grid>
                <Button Content="{Binding Source={StaticResource Strings}, Path=SendFeedback}"
                        Command="{Binding Source={StaticResource Locator}, Path=MainVM.GoToFeedbackPageCommand}"
                        Margin="{StaticResource FrameMarginLeft}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
